<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />

    <application
        android:name="com.edgecloudrecorder.mearitaskerplugin.app.MeariApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        
        <!-- Video Recorder Main Activity -->
        <activity
            android:name="com.edgecloudrecorder.mearitaskerplugin.RecorderMainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="MEARI_NETWORK"
            android:value="8" />

        <service
            android:name="org.eclipse.paho.android.service.MqttService"
            android:priority="1000" />

        <!-- Video Recorder Service -->
        <service
            android:name="com.edgecloudrecorder.mearitaskerplugin.recorder.VideoRecorderService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="camera|mediaProjection" />

        <!-- Configuration Broadcast Receiver -->
        <receiver
            android:name="com.edgecloudrecorder.mearitaskerplugin.recorder.ConfigReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.edgecloudrecorder.SET_DURATION" />
                <action android:name="com.edgecloudrecorder.SET_QUALITY" />
                <action android:name="com.edgecloudrecorder.SET_CREDENTIALS" />
                <action android:name="com.edgecloudrecorder.SET_USERNAME" />
                <action android:name="com.edgecloudrecorder.SET_PASSWORD" />
                <action android:name="com.edgecloudrecorder.SET_COUNTRY" />
                <action android:name="com.edgecloudrecorder.SET_COUNTRY_CODE" />
                <action android:name="com.edgecloudrecorder.SHOW_CONFIG" />
            </intent-filter>
        </receiver>
    </application>

</manifest>